<link rel="stylesheet" href="/css/style.css">

<div class="container">
    <div class="img-container">
        <img src="https://images.emojiterra.com/google/android-10/512px/1f354.png " alt="Picture of a burger">
    </div>
    <h1 class="title">Eat-Da-Burger</h1>
    <div class="lists-container">
        {{!-- This is not devoured --}}
        <div>
            {{#each burgers}}
                {{#with dataValues}}
                    {{#unless isDevoured }}
                        <div>
                            {{ name }}  <button class="devour" data-id="{{ id }}">Devour it</button> 
                        </div>
                    {{/unless}}
                {{/with}}
            {{/each}}
        </div>
        {{!-- This is devoured --}} 
        <div>
            {{#each burgers}}
                {{#if dataValues.isDevoured }}
                    <div>
                        {{ dataValues.name }}
                    </div>
                {{/if}}
            {{/each}}
        </div>
    </div> 
    <div class="inputContainer">
        <input type="text" id="newBurger" /> 
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
<script src="/js/script.js"></script>